<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.deepdragon.entity.weipu.NavigationMapper">

	<sql id="columnList">
		`id`,`tenantId`,`name`,`position`,`url`,`isVisible`,`isBlankTarget`,`orderNo`,`createUser`,`createDate`,`modifyUser`,`modifyDate`,`platform`,`urlType`
	</sql>

	<select id="get" resultType="net.deepdragon.entity.weipu.Navigation">
		select
		<include refid="columnList" />
		from wp_navigation
		where id = #{id}
		and tenantId = #{tenantId}
		and platform = #{platform}
	</select>

	<select id="find" resultType="net.deepdragon.entity.weipu.Navigation">
		select
		<include refid="columnList" />
		from wp_navigation
		where tenantId = #{tenantId} and platform = #{platform} and ${property}=#{value}
	</select>

	<select id="findList" resultType="net.deepdragon.entity.weipu.Navigation">
		select
		<include refid="columnList" />
		from wp_navigation
		where tenantId = #{tenantId} and platform = #{platform} and ${property}=#{value}
	</select>
	
	<select id="findListByIds" resultType="net.deepdragon.entity.weipu.Navigation">
		select
		<include refid="columnList" />
		from wp_navigation
		where id in
		<foreach collection="list" item="id" index="index" open="("	close=")" separator=",">#{id}</foreach>
		and tenantId = #{tenantId} and platform = #{platform}
	</select>
	
	<select id="getAll" resultType="net.deepdragon.entity.weipu.Navigation">
		select
		<include refid="columnList" />
		from wp_navigation 
		where tenantId = #{tenantId} and platform = #{platform}
	</select>
	
	<select id="getPager" resultType="net.deepdragon.entity.weipu.Navigation">
		select
		<include refid="columnList" />
		from wp_navigation 
		<if test="(@net.deepdragon.util.OgnlUtils@isEmpty(condition))!=null">${condition}</if>
	</select>
	
	<select id="getList" resultType="net.deepdragon.entity.weipu.Navigation">
		select
		<include refid="columnList" />
		from wp_navigation 
		<if test="(@net.deepdragon.util.OgnlUtils@isEmpty(condition))!=null">${condition}</if>
	</select>

	<select id="getTotalCount" resultType="java.lang.Long">
		select count(id) as result
		from wp_navigation where tenantId = #{tenantId} and platform = #{platform}
	</select>
	
	<select id="isExist" resultType="java.lang.Boolean">
		select count(id) as result from wp_navigation 
		where tenantId = #{tenantId} and platform = #{platform} and ${property}=#{value}
	</select>
	
	<insert id="save" parameterType="net.deepdragon.entity.weipu.Navigation"
		useGeneratedKeys="true" keyProperty="id">
		insert into wp_navigation
		<trim prefix="(" suffix=")" suffixOverrides=",">
			`id`,`tenantId`,`platform`
			<if test="name != null">,`name`</if>
			<if test="position != null">,`position`</if>
			<if test="url != null">,`url`</if>
			<if test="isVisible != null">,`isVisible`</if>
			<if test="isBlankTarget != null">,`isBlankTarget`</if>
			<if test="orderNo != null">,`orderNo`</if>
			<if test="createUser != null">,`createUser`</if>
			<if test="createDate != null">,`createDate`</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			#{id},#{tenantId},#{platform}
			<if test="name != null">,#{name}</if>
			<if test="position != null">,#{position}</if>
			<if test="url != null">,#{url}</if>
			<if test="isVisible != null">,#{isVisible}</if>
			<if test="isBlankTarget != null">,#{isBlankTarget}</if>
			<if test="orderNo != null">,#{orderNo}</if>
			<if test="createUser != null">,#{createUser}</if>
			<if test="createDate != null">,#{createDate}</if>
		</trim>
	</insert>

	<update id="update" parameterType="net.deepdragon.entity.weipu.Navigation">
		update wp_navigation
		<set>
			`tenantId` = #{tenantId},`platform` = #{platform}
			<if test="name != null">,`name` = #{name}</if>
			<if test="position != null">,`position` = #{position}</if>
			<if test="url != null">,`url` = #{url}</if>
			<if test="isVisible != null">,`isVisible` = #{isVisible}</if>
			<if test="isBlankTarget != null">,`isBlankTarget` = #{isBlankTarget}</if>
			<if test="orderNo != null">,`orderNo` = #{orderNo}</if>
			<if test="modifyUser != null">,`modifyUser` = #{modifyUser}</if>
			<if test="modifyDate != null">,`modifyDate` = #{modifyDate}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete">
		delete from wp_navigation
		where id =	#{id}
		and tenantId = #{tenantId}
		and platform = #{platform}
	</delete>

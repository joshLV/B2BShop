	<select id="getListKeywords" resultType="net.deepdragon.entity.weipu.Keywords">
		SELECT * FROM wp_keywords_search
		<if test="(@net.deepdragon.util.OgnlUtils@isEmpty(condition))!=null">${condition}</if>
	</select>
	
</mapper>
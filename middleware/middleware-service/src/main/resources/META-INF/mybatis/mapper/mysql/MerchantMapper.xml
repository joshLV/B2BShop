<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.deepdragon.entity.weipu.MerchantMapper">

	<sql id="columnList">
		a.id, a.tenantId, a.typeId, a.name, a.shortName, CONCAT((select setvalue from shared_system_set where setKey='shopUrl'),CONCAT('/shop/',a.urlAddress)) as url,CONCAT((select setvalue from shared_system_set where setKey='imageUrl'),(select setvalue from wp_merchant_setting where setKey='pic' and shopId=a.id)) as pic, a.businessLicenseCode, a.businessLicense, a.groupName, a.imageWidth, a.imageHeight, a.head, a.sex, a.mobile, a.telphone, a.email, a.areaPath, a.address, a.status, a.sign, a.urlAddress, a.createUser, a.createDate, a.modifyUser, a.modifyDate, a.qqKeFu, a.hasRebate ,CONCAT((select setvalue from shared_system_set where setKey='imageUrl'), a.weixinImg) as weixinImg, a.deliveryDay, a.initialPost, a.website
	</sql>

	<select id="get" resultType="net.deepdragon.entity.weipu.Merchant">
		select
		<include refid="columnList" />
		, (select q.linkMan from b2b_quotation q where q.merchantId=a.id order by q.createDate desc limit 1) as linkMan
		, (select q.linkMobel from b2b_quotation q where q.merchantId=a.id order by q.createDate desc limit 1) as linkMobel
		, (select q.linkTel from b2b_quotation q where q.merchantId=a.id order by q.createDate desc limit 1) as linkTel
		<if test="atitude != null and longitude!=null">
			,ROUND(6378.138 * 2 * ASIN(SQRT(POW(SIN(( #{atitude} * PI() / 180- a.atitude * PI() / 180) / 2),2) + COS(#{atitude} * PI() / 180) * COS(a.atitude * PI() / 180) * POW(SIN((#{longitude} * PI() / 180- a.longitude * PI() / 180) / 2),2)))*1000) AS km,
			IFNULL((SELECT COUNT(o.id) FROM wp_order o WHERE o.shopId = a.id  AND o.orderStatus = 'trade_finished' LIMIT 1), '0' ) AS sile
		</if>
		from wp_merchant as a
		where a.id = #{id}
	</select>

	<select id="find" resultType="net.deepdragon.entity.weipu.Merchant">
		select
		<include refid="columnList" />
		from wp_merchant as a
		where a.tenantId = #{tenantId} and ${property}=#{value}
	</select>

	<select id="findList" resultType="net.deepdragon.entity.weipu.Merchant">
		select
		<include refid="columnList" />
		from wp_merchant as a
		where a.tenantId = #{tenantId} and ${property}=#{value}
	</select>
	
	<select id="findListByIds" parameterType="java.lang.String"
		resultType="net.deepdragon.entity.weipu.Merchant">
		select
		<include refid="columnList" />
		from wp_merchant as a
		where a.id in
		<foreach collection="list" item="id" index="index" open="("	close=")" separator=",">#{id}</foreach>
	</select>
	
	<select id="getAll" resultType="net.deepdragon.entity.weipu.Merchant">
		select
		<include refid="columnList" />
		from wp_merchant as a
		where a.tenantId = #{tenantId}
	</select>
	
	<select id="getPager" resultType="net.deepdragon.entity.weipu.Merchant">
		select
		<include refid="columnList" />
		from wp_merchant as a
		<if test="(@net.deepdragon.util.OgnlUtils@isEmpty(condition))!=null">${condition}</if>
	</select>
	
	<select id="getList" resultType="net.deepdragon.entity.weipu.Merchant">
		select
		<include refid="columnList" />
		from wp_merchant as a
		<if test="(@net.deepdragon.util.OgnlUtils@isEmpty(condition))!=null">${condition}</if>
	</select>

	<select id="getTotalCount" resultType="java.lang.Long">
		select count(id) as result
		from wp_merchant where tenantId = #{tenantId}
	</select>
	
	<select id="isExist" resultType="java.lang.Boolean">
		select count(id) as result from wp_merchant 
		where tenantId = #{tenantId} and ${property}=#{value}
	</select>
	
	<insert id="save" parameterType="net.deepdragon.entity.weipu.Merchant"

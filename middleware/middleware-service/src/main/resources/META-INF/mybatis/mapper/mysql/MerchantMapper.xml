		delete from wp_merchant
		where id =	#{id}
	</delete>

	<select id="getNameMerchants" resultType="net.deepdragon.entity.weipu.Merchant">
		select
		a.*
		from wp_merchant as a
		Where a.tenantId=#{tenantId} AND a.status=3
		AND a.name LIKE CONCAT(CONCAT('%', #{merchantName}), '%');
	</select>
	

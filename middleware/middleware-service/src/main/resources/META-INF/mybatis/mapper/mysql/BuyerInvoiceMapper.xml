<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.deepdragon.entity.weipu.BuyerInvoiceMapper">

	<sql id="columnList">
		`id`,`tenantId`,`buyerId`,`invoiceType`,`invoiceTitle`,`isDefault`,`isDelete`,`createUser`,`createDate`,`modifyUser`,`modifyDate`
	</sql>

	<select id="get" resultType="net.deepdragon.entity.weipu.BuyerInvoice">
		select
		<include refid="columnList" />
		from b2b_buyer_invoice
		where id = #{id}
	</select>

	<select id="getDefault"  resultType="net.deepdragon.entity.weipu.BuyerInvoice">
		select
		<include refid="columnList" />
		from b2b_buyer_invoice
		where isDefault=1 and buyerId=#{buyerId} order by createDate desc limit 0,1
	</select>

	<select id="find" resultType="net.deepdragon.entity.weipu.BuyerInvoice">
		select
		<include refid="columnList" />
		from b2b_buyer_invoice
		where tenantId = #{tenantId} and ${property}=#{value}
	</select>

	<select id="findList" resultType="net.deepdragon.entity.weipu.BuyerInvoice">
		select
		<include refid="columnList" />
		from b2b_buyer_invoice
		where tenantId = #{tenantId} and ${property}=#{value}
	</select>
	
	<select id="findListByIds" parameterType="java.lang.String"
		resultType="net.deepdragon.entity.weipu.BuyerInvoice">
		select
		<include refid="columnList" />
		from b2b_buyer_invoice
		where id in
		<foreach collection="list" item="id" index="index" open="("	close=")" separator=",">#{id}</foreach>
	</select>
	
	<select id="getAll" resultType="net.deepdragon.entity.weipu.BuyerInvoice">
		select
		<include refid="columnList" />
		from b2b_buyer_invoice 
		where tenantId = #{tenantId}
	</select>
	
	<select id="getPager" resultType="net.deepdragon.entity.weipu.BuyerInvoice">
		select
		<include refid="columnList" />
		from b2b_buyer_invoice 
		<if test="(@net.deepdragon.util.OgnlUtils@isEmpty(condition))!=null">${condition}</if>
	</select>
	
	<select id="getList" resultType="net.deepdragon.entity.weipu.BuyerInvoice">
		select
		<include refid="columnList" />
		from b2b_buyer_invoice 
		<if test="(@net.deepdragon.util.OgnlUtils@isEmpty(condition))!=null">${condition}</if>
	</select>

	<select id="getTotalCount" resultType="java.lang.Long">
		select count(id) as result
		from b2b_buyer_invoice where tenantId = #{tenantId}
	</select>
	
	<select id="isExist" resultType="java.lang.Boolean">
		select count(id) as result from b2b_buyer_invoice 
		where tenantId = #{tenantId} and ${property}=#{value}
	</select>
	
	<insert id="save" parameterType="net.deepdragon.entity.weipu.BuyerInvoice"
		useGeneratedKeys="true" keyProperty="id">
		insert into b2b_buyer_invoice
		<trim prefix="(" suffix=")" suffixOverrides=",">
			`id`,`tenantId`
			<if test="buyerId != null">,`buyerId`</if>
			<if test="invoiceType != null">,`invoiceType`</if>
			<if test="invoiceTitle != null">,`invoiceTitle`</if>
			<if test="isDefault != null">,`isDefault`</if>
			<if test="isDelete != null">,`isDelete`</if>
			<if test="createUser != null">,`createUser`</if>
			<if test="createDate != null">,`createDate`</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			#{id},#{tenantId}
			<if test="buyerId != null">,#{buyerId}</if>
			<if test="invoiceType != null">,#{invoiceType}</if>
			<if test="invoiceTitle != null">,#{invoiceTitle}</if>
			<if test="isDefault != null">,#{isDefault}</if>
			<if test="isDelete != null">,#{isDelete}</if>
			<if test="createUser != null">,#{createUser}</if>
			<if test="createDate != null">,#{createDate}</if>
		</trim>
	</insert>

	<update id="update" parameterType="net.deepdragon.entity.weipu.BuyerInvoice">
		update b2b_buyer_invoice
		<set>
			`tenantId` = #{tenantId}
			<if test="buyerId != null">,`buyerId` = #{buyerId}</if>
			<if test="invoiceType != null">,`invoiceType` = #{invoiceType}</if>
			<if test="invoiceTitle != null">,`invoiceTitle` = #{invoiceTitle}</if>
			<if test="isDefault != null">,`isDefault` = #{isDefault}</if>
			<if test="isDelete != null">,`isDelete` = #{isDelete}</if>
			<if test="modifyUser != null">,`modifyUser` = #{modifyUser}</if>
			<if test="modifyDate != null">,`modifyDate` = #{modifyDate}</if>
		</set>
		where id = #{id}
	</update>

	<update id="updateDefault">
		update b2b_buyer_invoice set isDefault=0 where tenantId = #{tenantId} and buyerId=#{buyerId}
		<if test="id != null"> and id != #{id}</if>
	</update>

	<delete id="delete">
		delete from b2b_buyer_invoice
		where id =	#{id}
	</delete>
	
</mapper>
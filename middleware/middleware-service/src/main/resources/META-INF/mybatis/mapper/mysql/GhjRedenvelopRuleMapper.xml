	</select>
	
	<select id="getList" resultType="net.deepdragon.entity.weipu.GhjRedenvelopRule">
		select
		<include refid="columnList" />
		from ghj_redenvelop_rule
		<if test="(@net.deepdragon.util.OgnlUtils@isEmpty(condition))!=null">${condition}</if>
	</select>

	<select id="getTotalCount" resultType="java.lang.Long">
		select count(id) as result
		from ghj_redenvelop_rule where tenantId = #{tenantId}
	</select>
	
	<select id="isExist" resultType="java.lang.Boolean">
		select count(id) as result from ghj_redenvelop_rule
		where tenantId = #{tenantId} and ${property}=#{value}
	</select>
	
	<insert id="save" parameterType="net.deepdragon.entity.weipu.GhjRedenvelopRule"
		useGeneratedKeys="true" keyProperty="id">
		insert into ghj_redenvelop_rule
		<trim prefix="(" suffix=")" suffixOverrides=",">
			`id`,`tenantId`
			<if test="redEnvelopId != null">,`redEnvelopId`</if>
			<if test="goodsId != null">,`goodsId`</if>
			<if test="createUser != null">,`createUser`</if>
			<if test="createDate != null">,`createDate`</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			#{id},#{tenantId}
			<if test="redEnvelopId != null">,#{redEnvelopId}</if>
			<if test="goodsId != null">,#{goodsId}</if>
			<if test="createUser != null">,#{createUser}</if>
			<if test="createDate != null">,#{createDate}</if>
		</trim>
	</insert>

	<update id="update" parameterType="net.deepdragon.entity.weipu.GhjRedenvelopRule">
		update ghj_redenvelop_rule
		<set>
			`tenantId` = #{tenantId}
			<if test="redEnvelopId != null">,`redEnvelopId` = #{redEnvelopId}</if>
			<if test="goodsId != null">,`goodsId` = #{goodsId}</if>
			<if test="modifyUser != null">,`modifyUser` = #{modifyUser}</if>
			<if test="modifyDate != null">,`modifyDate` = #{modifyDate}</if>
		</set>
		where id = #{id}

	</sql>

	<select id="get" resultType="net.deepdragon.entity.weipu.GhjRedenvelopRule">
		select
		<include refid="columnList" />
		from ghj_redenvelop_rule
		where id = #{id}
	</select>

	<select id="find" resultType="net.deepdragon.entity.weipu.GhjRedenvelopRule">
		select
		<include refid="columnList" />
		from ghj_redenvelop_rule
		where tenantId = #{tenantId} and ${property}=#{value}
	</select>

	<select id="findList" resultType="net.deepdragon.entity.weipu.GhjRedenvelopRule">
		select
		<include refid="columnList" />
		from ghj_redenvelop_rule
		where tenantId = #{tenantId} and ${property}=#{value}
	</select>
	
	<select id="findListByIds" parameterType="java.lang.String"
		resultType="net.deepdragon.entity.weipu.GhjRedenvelopRule">
		select
		<include refid="columnList" />
		from ghj_redenvelop_rule
		where id in
		<foreach collection="list" item="id" index="index" open="("	close=")" separator=",">#{id}</foreach>
	</select>
	
	<select id="getAll" resultType="net.deepdragon.entity.weipu.GhjRedenvelopRule">
		select
		<include refid="columnList" />
		from ghj_redenvelop_rule
		where tenantId = #{tenantId}
	</select>
	
	<select id="getPager" resultType="net.deepdragon.entity.weipu.GhjRedenvelopRule">
		select
		<include refid="columnList" />
		from ghj_redenvelop_rule

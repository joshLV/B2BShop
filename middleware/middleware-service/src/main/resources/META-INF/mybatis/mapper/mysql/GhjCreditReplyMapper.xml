<mapper namespace="net.deepdragon.entity.weipu.GhjCreditReplyMapper">

	<sql id="columnList">
		`replyId` as id,`tenantId`,`platform`,`creditId`,`buyerId`,`bankName`,`bankDept`,`creditAmount`,`totalAmount`,`usedAmount`,`creditStartDate`,`creditEndDate`,`bankrate`,`operator`,`operatTime`,`remark`,`createUser`,`createDate`,`modifyUser`,`modifyDate`

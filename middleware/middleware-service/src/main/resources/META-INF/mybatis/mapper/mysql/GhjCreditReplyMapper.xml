		<include refid="columnList" />
		from ghj_credit_reply
		where replyId in
		<foreach collection="list" item="id" index="index" open="("	close=")" separator=",">#{id}</foreach>
	</select>
	
	<select id="getAll" resultType="net.deepdragon.entity.weipu.GhjCreditReply">
		select
		<include refid="columnList" />
		from ghj_credit_reply
		where tenantId = #{tenantId}
	</select>
	
	<select id="getPager" resultType="net.deepdragon.entity.weipu.GhjCreditReply">
		SELECT
		cr.*, (cr.creditAmount-cr.totalAmount) residualCredit,
		IFNULL(loan.loanStatus, '0') loanStatus
		FROM
		ghj_credit_reply cr
		LEFT JOIN (
		SELECT
		replyId,
		loanStatus
		FROM
		ghj_credit_loan_log
		WHERE
		loanStatus = 'apply_loaning'
		) loan ON cr.replyId = loan.replyId
		<if test="(@net.deepdragon.util.OgnlUtils@isEmpty(condition))!=null">${condition}</if>
	</select>
	
	<select id="getList" resultType="net.deepdragon.entity.weipu.GhjCreditReply">

	<!-- 根据商品ID和商品总金额查询满足的满减  TianYu 2016-04-15 14:26:07 Start -->
	<select id="getDecreByGoodsId" resultType="net.deepdragon.entity.weipu.ActivityDecreaseamount">
		SELECT
			d.id,
			d.fullCutItemId,
			d.totalPrice,
			d.decreaseAmount
		FROM
			cx_activity_decreaseamount d
		WHERE
			d.totalPrice &lt;= #{goodsPriceCount}
			AND d.tenantId = #{tenantId}
			AND d.isDelete = 1
			AND d.fullCutItemId = (
				SELECT
					i.id
				FROM
					cx_activity_fullcut_item i,
					(
						SELECT
							f.id,
							f.startTime
						FROM
							cx_activity_fullcut f
						WHERE
							f.tenantId = #{tenantId}
							AND f.startTime &lt;= SYSDATE()
							AND f.endTime &gt;= SYSDATE()
							AND f.isDelete = 1
					) fc
				WHERE i.fullCutId = fc.id
					AND i.itemType = 'goods'
					AND i.tenantId = #{tenantId}
					AND i.itemId = #{goodsId}
				ORDER BY
					fc.startTime DESC
				LIMIT 1
			)
		ORDER BY
			d.totalPrice DESC
		LIMIT 1
	</select>
	<!-- 根据商品ID和商品总金额查询满足的满减  TianYu 2016-04-15 14:26:07 End -->

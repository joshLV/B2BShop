<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/tx
            http://www.springframework.org/schema/tx/spring-tx.xsd http://www.springframework.org/schema/aop
            http://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd">

	<description>共享服务接口定义</description>

	<!-- 用户表服务 -->
	<dubbo:reference id="sharedUserService" interface="net.deepdragon.service.UserService"
		version="${shared.reference.version}" group="${shared.reference.group}"
		timeout="${shared.reference.timeout}" retries="${shared.reference.retries}" />

	<!-- 角色表服务 -->
	<dubbo:reference id="sharedRoleService" interface="net.deepdragon.service.RoleService"
		version="${shared.reference.version}" group="${shared.reference.group}"
		timeout="${shared.reference.timeout}" retries="${shared.reference.retries}" />

	<!-- 资源表服务 -->
	<dubbo:reference id="sharedResourcesService"
		interface="net.deepdragon.service.ResourcesService" version="${shared.reference.version}"
		group="${shared.reference.group}" timeout="${shared.reference.timeout}"
		retries="${shared.reference.retries}" />

	<!-- 功能表服务 -->
	<dubbo:reference id="sharedFunctionsService"
		interface="net.deepdragon.service.FunctionsService" version="${shared.reference.version}"
		group="${shared.reference.group}" timeout="${shared.reference.timeout}"
		retries="${shared.reference.retries}" />

	<!-- 权限表服务 -->
	<dubbo:reference id="sharedPermissionsService"
		interface="net.deepdragon.service.PermissionsService" version="${shared.reference.version}"
		group="${shared.reference.group}" timeout="${shared.reference.timeout}"
		retries="${shared.reference.retries}" />

	<!-- 模块表服务 -->
	<dubbo:reference id="sharedModuleService"
		interface="net.deepdragon.service.ModuleService" version="${shared.reference.version}"
		group="${shared.reference.group}" timeout="${shared.reference.timeout}"
		retries="${shared.reference.retries}" />

	<!-- 日志表服务 -->
	<dubbo:reference id="sharedLogService" interface="net.deepdragon.service.LogService"
		version="${shared.reference.version}" group="${shared.reference.group}"
		timeout="${shared.reference.timeout}" retries="${shared.reference.retries}" />

	<!-- 日志配置表服务 -->
	<dubbo:reference id="sharedLogConfigService"
		interface="net.deepdragon.service.LogConfigService" version="${shared.reference.version}"
		group="${shared.reference.group}" timeout="${shared.reference.timeout}"
		retries="${shared.reference.retries}" />

	<!-- 租户管理服务 -->
	<dubbo:reference id="sharedTenantService"
		interface="net.deepdragon.service.TenantService" version="${shared.reference.version}"
		group="${shared.reference.group}" timeout="${shared.reference.timeout}"
		retries="${shared.reference.retries}" />

	<!-- 资源分类表服务 -->
	<dubbo:reference id="sharedResourcesTypeService"
		interface="net.deepdragon.service.ResourcesTypeService" version="${shared.reference.version}"
		group="${shared.reference.group}" timeout="${shared.reference.timeout}"
		retries="${shared.reference.retries}" />

	<!-- 扩展数据表服务 -->
	<dubbo:reference id="sharedExpandService"
		interface="net.deepdragon.service.ExpandService" version="${shared.reference.version}"
		group="${shared.reference.group}" timeout="${shared.reference.timeout}"
		retries="${shared.reference.retries}" />

	<!-- 扩展配置表服务 -->
	<dubbo:reference id="sharedExpandConfigService"
		interface="net.deepdragon.service.ExpandConfigService" version="${shared.reference.version}"
		group="${shared.reference.group}" timeout="${shared.reference.timeout}"
		retries="${shared.reference.retries}" />

</beans>